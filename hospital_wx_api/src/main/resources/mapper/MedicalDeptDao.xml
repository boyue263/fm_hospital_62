<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.wx.dao.MedicalDeptDao">
    <select id="selectMedicalDeptList" parameterType="map" resultType="java.util.HashMap">
    SELECT id,`name`
    FROM medical_dept
    <where>
        <if test="recommended!=null">
            AND recommended = #{recommended}
        </if>
        <if test="outpatient!=null">
            AND outpatient = #{outpatient}
        </if>
    </where>
    </select>
</mapper>